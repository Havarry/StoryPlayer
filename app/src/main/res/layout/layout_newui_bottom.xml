<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/transparent"
                android:gravity="center"
                android:orientation="horizontal">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:orientation="horizontal"
        >

        <RelativeLayout
            android:id="@+id/rl_main_tab_discover"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_weight="1"
            android:background="@color/white"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_main_tab_discover"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center"
                android:layout_marginTop="5dp"
                android:src="@mipmap/btn_icon1"/>

            <TextView
                android:id="@+id/tv_main_tab_room"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/iv_main_tab_discover"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="1dp"
                android:gravity="center"
                android:text="@string/main_tab_discover"
                android:textSize="10sp"/>

            <ImageView
                android:id="@+id/iv_room_red_star"
                android:layout_width="6dp"
                android:layout_height="6dp"
                android:layout_alignRight="@+id/iv_main_tab_discover"
                android:layout_alignTop="@+id/iv_main_tab_discover"
                android:layout_marginRight="-1dp"
                android:layout_marginTop="-1dp"
                android:src="@mipmap/red_star"
                android:visibility="gone"/>
        </RelativeLayout>


        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_weight="1"
            android:background="@color/white"
            android:orientation="vertical">

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:layout_marginTop="5dp"/>

            <TextView
                android:id="@+id/tv_newui_player_new"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="1dp"
                android:gravity="center"
                android:textSize="10dp"/>
        </LinearLayout>

        <RelativeLayout
            android:id="@+id/rl_main_tab_download"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_weight="1"
            android:background="@color/white"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_main_tab_download"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center"
                android:layout_marginTop="5dp"
                android:src="@mipmap/btn_icon2"/>

            <TextView
                android:id="@+id/tv_main_tab_message"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/iv_main_tab_download"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="1dp"
                android:gravity="center"
                android:text="@string/main_tab_download"
                android:textSize="10dp"/>

            <ImageView
                android:id="@+id/iv_message_red_star"
                android:layout_width="6dp"
                android:layout_height="6dp"
                android:layout_alignRight="@+id/iv_main_tab_download"
                android:layout_alignTop="@+id/iv_main_tab_download"
                android:layout_marginRight="-1dp"
                android:layout_marginTop="-1dp"
                android:src="@mipmap/red_star"
                android:visibility="gone"/>

        </RelativeLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_center_player"
        android:layout_width="48dp"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/iv_center_player"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_gravity="center"
            android:src="@mipmap/btn_player"/>
    </LinearLayout>


</RelativeLayout>